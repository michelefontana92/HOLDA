<root_node>
    <task>
        <n_features> 103 </n_features>
        <n_classes>2</n_classes>
        <target>income</target>
    </task>
    <model>
        <model_fn>models.nn.create_simple_net</model_fn>
        <params>
            <input>103</input>
            <hidden_1>200</hidden_1>
            <dropout>0.2</dropout>
            <output>2</output>
        </params>
    </model>
    <metrics>
        <metric>accuracy</metric>
        <metric>precision</metric>
        <metric>recall</metric>
        <metric>f1</metric>
    </metrics>
    <setting>
        <use_deltas>True</use_deltas>
    </setting>

    <architecture>
        <server>
            <meta>
                <id>ServerS</id>
                <log_path>./examples/experiments/not_hier/logs/log_ServerS.txt</log_path>
                <ckpt_best>./examples/experiments/not_hier/ServerSCkpt/ServerS_best.pt</ckpt_best>
                <ckpt_epoch>./examples/experiments/not_hier/ServerSCkpt/ServerS_epoch.pt</ckpt_epoch>
            </meta>
            <training>
                <epochs>3</epochs>
                <patience>10</patience>
                <epoch2ckpt>10</epoch2ckpt>
                <sample_size>1</sample_size>
                <from_check>False</from_check>
            </training>


            <client>

                <meta>
                    <id>Client_C0</id>
                    <log_path>./examples/experiments/not_hier/logs/log_clientC0.txt</log_path>
                    <ckpt_best>./examples/experiments/not_hier/ClientC0Ckpt/clientC0_best.pt</ckpt_best>
                    <ckpt_epoch>./examples/experiments/not_hier/ClientC0Ckpt/clientC0_epoch.pt</ckpt_epoch>
                    <train_path>./examples/datasets/node_0/adult_train_enc.csv</train_path>
                    <val_path>./examples/datasets/node_0/adult_val_enc.csv</val_path>
                    <test_path>./examples/datasets/node_0/adult_test_enc.csv</test_path>
                </meta>
                <training>
                    <epochs>2</epochs>
                    <batch_size>128</batch_size>
                    <patience>10</patience>
                    <epoch2ckpt>10</epoch2ckpt>
                    <use_weights>True</use_weights>
                    <optimizer>
                        <optimizer_fn>torch.optim.Adam</optimizer_fn>
                        <params>
                            <lr>1e-4</lr>
                        </params>
                    </optimizer>
                    <loss>
                        <loss_fn>torch.nn.CrossEntropyLoss</loss_fn>
                    </loss>
                </training>
                <pers_training>
                    <epochs>5</epochs>
                    <optimizer>
                        <optimizer_fn>torch.optim.Adam</optimizer_fn>
                        <params>
                            <lr>1e-4</lr>
                        </params>
                    </optimizer>
                </pers_training>
            </client>
            <client>

                <meta>
                    <id>Client_C1</id>
                    <log_path>./examples/experiments/not_hier/logs/log_clientC1.txt</log_path>
                    <ckpt_best>./examples/experiments/not_hier/ClientC1Ckpt/clientC1_best.pt</ckpt_best>
                    <ckpt_epoch>./examples/experiments/not_hier/ClientC1Ckpt/clientC1_epoch.pt</ckpt_epoch>
                    <train_path>./examples/datasets/node_1/adult_train_enc.csv</train_path>
                    <val_path>./examples/datasets/node_1/adult_val_enc.csv</val_path>
                    <test_path>./examples/datasets/node_1/adult_test_enc.csv</test_path>
                </meta>
                <training>
                    <epochs>2</epochs>
                    <batch_size>128</batch_size>
                    <patience>10</patience>
                    <epoch2ckpt>10</epoch2ckpt>
                    <use_weights>True</use_weights>
                    <optimizer>
                        <optimizer_fn>torch.optim.Adam</optimizer_fn>
                        <params>
                            <lr>1e-4</lr>
                        </params>
                    </optimizer>
                    <loss>
                        <loss_fn>torch.nn.CrossEntropyLoss</loss_fn>
                    </loss>
                </training>
                <pers_training>
                    <epochs>5</epochs>
                    <optimizer>
                        <optimizer_fn>torch.optim.Adam</optimizer_fn>
                        <params>
                            <lr>1e-4</lr>
                        </params>
                    </optimizer>
                </pers_training>
            </client>
            <client>

                <meta>
                    <id>Client_C2</id>
                    <log_path>./examples/experiments/not_hier/logs/log_clientC2.txt</log_path>
                    <ckpt_best>./examples/experiments/not_hier/ClientC2Ckpt/clientC2_best.pt</ckpt_best>
                    <ckpt_epoch>./examples/experiments/not_hier/ClientC2Ckpt/clientC2_epoch.pt</ckpt_epoch>
                    <train_path>./examples/datasets/node_2/adult_train_enc.csv</train_path>
                    <val_path>./examples/datasets/node_2/adult_val_enc.csv</val_path>
                    <test_path>./examples/datasets/node_2/adult_test_enc.csv</test_path>
                </meta>
                <training>
                    <epochs>2</epochs>
                    <batch_size>128</batch_size>
                    <patience>10</patience>
                    <epoch2ckpt>10</epoch2ckpt>
                    <use_weights>True</use_weights>
                    <optimizer>
                        <optimizer_fn>torch.optim.Adam</optimizer_fn>
                        <params>
                            <lr>1e-4</lr>
                        </params>
                    </optimizer>
                    <loss>
                        <loss_fn>torch.nn.CrossEntropyLoss</loss_fn>
                    </loss>
                </training>
                <pers_training>
                    <epochs>5</epochs>
                    <optimizer>
                        <optimizer_fn>torch.optim.Adam</optimizer_fn>
                        <params>
                            <lr>1e-4</lr>
                        </params>
                    </optimizer>
                </pers_training>
            </client>
            <client>

                <meta>
                    <id>Client_C3</id>
                    <log_path>./examples/experiments/not_hier/logs/log_clientC3.txt</log_path>
                    <ckpt_best>./examples/experiments/not_hier/ClientC3Ckpt/clientC3_best.pt</ckpt_best>
                    <ckpt_epoch>./examples/experiments/not_hier/ClientC3Ckpt/clientC3_epoch.pt</ckpt_epoch>
                    <train_path>./examples/datasets/node_3/adult_train_enc.csv</train_path>
                    <val_path>./examples/datasets/node_3/adult_val_enc.csv</val_path>
                    <test_path>./examples/datasets/node_3/adult_test_enc.csv</test_path>
                </meta>
                <training>
                    <epochs>2</epochs>
                    <batch_size>128</batch_size>
                    <patience>10</patience>
                    <epoch2ckpt>10</epoch2ckpt>
                    <use_weights>True</use_weights>
                    <optimizer>
                        <optimizer_fn>torch.optim.Adam</optimizer_fn>
                        <params>
                            <lr>1e-4</lr>
                        </params>
                    </optimizer>
                    <loss>
                        <loss_fn>torch.nn.CrossEntropyLoss</loss_fn>
                    </loss>
                </training>
                <pers_training>
                    <epochs>5</epochs>
                    <optimizer>
                        <optimizer_fn>torch.optim.Adam</optimizer_fn>
                        <params>
                            <lr>1e-4</lr>
                        </params>
                    </optimizer>
                </pers_training>
            </client>


        </server>
    </architecture>
</root_node>